
<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=0.8">
  <title>EdukateMe</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/5.10.2/video-js.css" rel="stylesheet">
    <script src="http://vjs.zencdn.net/5.9.2/video.js"></script>

</head>
<body>

<div id ="wrap">
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "EdukateMe", root_path, class:'navbar-brand edukate' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        
        <li><%=link_to 'See All Courses', courses_path %> </li>
        </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to "My Dashboard", dashboard_path %> </li>
       <li><%=link_to "You're signed in!", new_user_session_path%></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </li>
        
        <%else%>
        <li> <%= link_to 'Sign In', new_user_session_path %> </li>
        <li> <%= link_to "Sign up", new_user_registration_path %> </li>
        <%end%>
         
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>




<%= yield %>
</div>

<br class="clr" />

<div id="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>City</b>
       <br />
        Berkeley, CA
        
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to "https://github.com/theberbie" do %>

         <%= image_tag 'github.png' , class:'social-button'%>
         <% end %>
        <%= image_tag 'facebook.png', class:'social-button' %>
        <%= image_tag 'twitter.png', class:'social-button' %>
      </div>
    </div>
  </div>


</body>
</html>
